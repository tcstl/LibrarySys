@using LibrarySys.Models.Entity


@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<style>
    .box {
        color: none;
        padding: 20px;
        display: none;
        margin-top: 20px;
    }

    .red {
        background: none;
    }

    .green {
        background: none;
    }

    .blue {
        background: none;
    }
</style>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('input[type="radio"]').click(function () {
            var inputValue = $(this).attr("value");
            var targetBox = $("." + inputValue);
            $(".box").not(targetBox).hide();
            $(targetBox).show();
        });
    });
</script>

<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <p>Книги: @ViewBag.d1</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="#" class="small-box-footer"> <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <p>Върнати книги: @ViewBag.d4</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="#" class="small-box-footer"> <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>

    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <p>Заети книги: @ViewBag.d5</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div> <a href="#" class="small-box-footer"> <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <p>Читатели: @ViewBag.d2</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>  <a href="#" class="small-box-footer"> <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>
    <!-- ./col -->
</div>

<html>
<body>




    <style>
        .radiobox {
            padding: 20px;
            text-align: center;
        }
    </style>
    <div class="radiobox">
        <label><input type="radio" name="colorRadio" value="green"> Тор 10 Книги</label>
        <label><input type="radio" name="colorRadio" value="red"> Тор 10 Автори</label>
        <label><input type="radio" name="colorRadio" value="blue">  Тор 10 Читатели</label>
    </div>


    <div class="red box">
        <section class="main-content">
            <div class="container">
                <h2 style="text-align:center; font-style:italic">Топ 10 Автори</h2>
                <br />

                <table class="table">
                    <thead>
                        <tr>
                            <th> Име </th>
                            <th> Фамилия</th>
                            <th> Брой книги </th>

                        </tr>
                    </thead>


                    @foreach (var a in Model.topauthor)
                    {
                        <tbody>
                            <tr>
                                <td> @a.FirstName </td>
                                <td> @a.LastName </td>
                                <td> @a.Книги </td>

                            </tr>
                        </tbody>
                    }

                </table>

            </div>
        </section>

    </div>

    <div class="green box">
        <section class="main-content">
            <div class="container">


                <h2 style="text-align:center; font-style:italic">Топ 10 Книги</h2>
                <br />

                <table class="table">
                    <thead>
                        <tr>
                            <th>Заглавие </th>
                            <th> Име </th>
                            <th>  Фамилия  </th>
                            <th> Брой четения </th>

                        </tr>
                    </thead>


                    @foreach (var a in Model.topbook)
                    {
                        <tbody>
                            <tr>
                                <td> @a.Title </td>
                                <td> @a.FirstName </td>
                                <td> @a.LastName </td>
                                <td> @a.Най_много_четена_книга </td>

                            </tr>
                        </tbody>
                    }

                </table>

            </div>
        </section>
    </div>

    <div class="blue box">
        <section class="main-content">
            <div class="container">


                <h2 style="text-align:center; font-style:italic">Топ 10 Читатели</h2>
                <br />

                <table class="table">
                    <thead>
                        <tr>
                            <th> Име </th>
                            <th> Фамилия</th>
                            <th> Брой книги  </th>

                        </tr>
                    </thead>


                    @foreach (var a in Model.topreader)
                    {
                        <tbody>
                            <tr>
                                <td> @a.FirstName </td>
                                <td> @a.LastName </td>
                                <td> @a.Брой_книги </td>

                            </tr>
                        </tbody>
                    }

                </table>

            </div>
        </section>

    </div>

</body>
</html>
<script src="~/Content/showhideradio.js"></script>
