@model LibrarySys.Models.Entity.Employee
@{
    ViewBag.Title = "UpdateEmployeePage";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<body>
    <div class="content">
        <div class="container">
            <div class="row align-items-stretch no-gutters input-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3 style="text-align:center; font-style:italic; color:grey">Актуализирай Служителя </h3>
                        @using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
                        {

                            <form class="mb-5" method="post" id="inputForm" name="inputForm">

                                <div class="row">
                                    <label for="" class="col-form-label"> ИД: @Html.TextBoxFor(e => e.ID_employee, new { @class = "none" })</label>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Име: *</label>
                                        @Html.TextBoxFor(е => е.FirstName, new { @class = "form-control", @placeholder = "Въведи името на служителя" })
                                        @Html.ValidationMessageFor(е => е.FirstName, "", new { @style = "color:red" })

                                    </div>
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Фамилия:  *</label>
                                        @Html.TextBoxFor(е => е.LastName, new { @class = "form-control", @placeholder = "Въведи фамилията на служителя" })
                                        @Html.ValidationMessageFor(е => е.LastName, "", new { @style = "color:red" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 form-group mb-3">
                                        <label for="" class="col-form-label"> Имейл:  *</label>
                                        @Html.TextBoxFor(е => е.Email, new { @class = "form-control", @placeholder = "Въведи имейл" })
                                        @Html.ValidationMessageFor(е => е.Email, "", new { @style = "color:red" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label"> Парола:  *</label>
                                        @Html.TextBoxFor(е => е.Password, new { @type = "password", @id = "pass", @class = "form-control", @placeholder = "Въведи парола" })  <input type="checkbox" onclick="showhide()" class="col-form-label" /> Покажи/Скрий парола
                                        @Html.ValidationMessageFor(е => е.Password, "", new { @style = "color:red" })
                                    </div>

                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label"> Роля:  *</label>
                                        @Html.DropDownListFor(е => е.Role, (List<SelectListItem>)ViewBag.role, new { @class = "form-control", @placeholder = "Избери роля " })
                                        @Html.ValidationMessageFor(е => е.Role, "", new { @style = "color:red" })
                                    </div>


                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group mb-3">
                                        <label for="" class="col-form-label"> Адрес:  *</label>
                                        @Html.TextBoxFor(е => е.Adress, new { @class = "form-control", @placeholder = "Въведи адрес" })
                                        @Html.ValidationMessageFor(е => е.Adress, "", new { @style = "color:red" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="submit" value="Актуализирай" class="btn btn-primary rounded-0 py-2 px-4">
                                    </div>
                                </div>
                            </form>


                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>


<style>
    label .none {
        border-style: none;
        font-size: 14px;
        color: #b3b3b3;
        margin: 0 0 10px 0;
    }
</style>
<link href="~/Content/style_inputs.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Panel/docs/assets/plugins/popper/esm/popper.min.js"></script>
<script src="~/Content/main_input.js"></script>
<script>
    function showhide() {
        var x = document.getElementById("pass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

