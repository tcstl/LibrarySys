@using LibrarySys.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList<Genre>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<html>
<body>

    <section class="main-content">
        <div class="container">

            <h1 style="text-align:center; font-style:italic"> Жанрове </h1>


            @using (Html.BeginForm("Index", "Genre", FormMethod.Get))
            {
                <div style="margin-bottom:15px; margin-top:15px">
                    <ion-icon name="search-outline">   </ion-icon> &nbsp @Html.TextBox("s")
                    <input type="submit" value="Търсене" class="btn btn-primary btn-sm" />
                </div>
            }

            <table class="table">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Жанр </th>
                        <th> Действия </th>

                    </tr>
                </thead>
                @foreach (var ct in Model)
                {
                    <tbody>
                        <tr>
                            <td> @ct.ID_genre </td>
                            <td> @ct.name </td>


                            <td>
                                <div class="dropdown open">
                                    <a href="#!" class="px-2" id="triggerId3" data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        <i class="fa fa-ellipsis-v"></i>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="triggerId3">

                                        <a class="dropdown-item" href="~/Genre/UpdateCategoryPage/@ct.ID_genre"><i class="fa fa-pencil mr-1"></i> Актуализиране</a>

                                        <a class="dropdown-item text-danger" href="~/Genre/DeleteCategory/@ct.ID_genre" onclick="return confirm('Искатели да изтриете записа окончателно')"><i class="fa fa-trash mr-1"></i> Изтриване</a>


                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>

        </div>
    </section>


    <div>
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    </div>

    <div class="button">
        <a href="~/Genre/ADDCategory" class="btn btn-primary btn-sm"> Добави </a>
    </div>

</body>
</html>


<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/Content/table style.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

