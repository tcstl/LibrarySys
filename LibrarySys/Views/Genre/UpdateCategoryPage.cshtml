@model LibrarySys.Models.Entity.Genre
@{
    ViewBag.Title = "UpdateCategoryPage";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<html>
<body>

    <div class="content">

        <div class="container">
            <div class="row align-items-stretch no-gutters input-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3 style="text-align:center; font-style:italic; color:grey">Актуализиране на категория</h3>
                        @using (Html.BeginForm("UpdateCategory", "Genre", FormMethod.Post))
                        {

                            <form class="mb-5" method="post" id="inputForm" name="inputForm">

                                <div class="row">
                                    <label for="" class="col-form-label"> ИД: @Html.TextBoxFor(c => c.ID_genre, new { @class = "none" })</label>
                                </div>

                                <div class="row">

                                    <div class="col-md-12 form-group mb-3">
                                        <label for="" class="col-form-label">Добави жанр:   *</label>

                                        @Html.TextBoxFor(c => c.name, new { @class = "form-control", @placeholder = "Въведи категория" })
                                        @Html.ValidationMessageFor(е => е.name, "", new { @style = "color:red" })

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="submit" value="Актуализирай" class="btn btn-primary rounded-0 py-2 px-4">
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>


<style>
    label .none {
        border-style: none;
        font-size: 14px;
        color: #b3b3b3;
        margin: 0 0 10px 0;
    }
</style>
<link href="~/Content/style_inputs.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Panel/docs/assets/plugins/popper/esm/popper.min.js"></script>
<script src="~/Content/main_input.js"></script>


