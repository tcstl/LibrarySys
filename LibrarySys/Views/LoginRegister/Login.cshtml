
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <title>Библиотека Стима Читателски Вход </title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/Content/Login/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/Content/Login/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>Библиотека Стима - Вход</h1>
    <div class="login-form">
        <h2>Лог ин</h2>
        @using (Html.BeginForm("Login", "LoginRegister", FormMethod.Post))
        {
            <div class="form-group">
                <label>Имейл:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Имейл" required="required" name="Email" />
                </div>
            </div>
            <div class=" form-group">
                <label>Парола:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Парола" required="required" name="Password" />
                </div>
            </div>
            <label style="color:red; font-size:15px; font-style:italic"> @Html.ValidationMessage("Login") </label>
            <div class="forgot">
                <a href="#">Забравена парола</a>
                <p><input type="checkbox">Запомни ме</p>
            </div>
            <button type="submit">Вход</button>
        }
        <p class="register-p">Не сте регистриран?<a href="~/LoginRegister/Register" class="register"> Регистрация</a></p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy;2022 Всички права са запазени  <a href="~/Home/Index" target="_blank"> Стима Библоетека </a></p>
    </footer>

</body>

</html>