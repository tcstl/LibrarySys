@model LibrarySys.Models.Entity.News
@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<body>
    <div class="content">
        <div class="container">
            <div class="row align-items-stretch no-gutters input-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3 style="text-align:center; font-style:italic; color:grey">Добави Новина</h3>

                        <form class="mb-5" method="post" id="inputForm" name="inputForm">


                            <div class="row">
                                <div class="col-md-12 form-group mb-3">
                                    <label for="" class="col-form-label">  Тема: *</label>
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Въведи темата" })

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group mb-3">

                                    <label for="" class="col-form-label">Дата :* <input type="text" class="none" name="Date" value="@DateTime.Now.ToShortDateString()" /></label>
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="" class="col-form-label">  Избери служител публикувал: *</label>
                                    @Html.DropDownListFor(x => x.Employee.ID_employee, (List<SelectListItem>)ViewBag.e, new { @class = "form-control", @placeholder = "Въведи името на автора" })
                                </div>


                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group mb-3">
                                    <label for="" class="col-form-label"> Съдържание: *</label>
                                    @Html.TextAreaFor(x => x.Article, new { @name = "message", @id = "message", @cols = "30", @rows = "4", @class = "form-control", @placeholder = "Въведи....." })
                                </div>
                            </div>


                            <input type="hidden" name="Screen" value="True" />
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="submit" value="Добави" class="btn btn-primary rounded-0 py-2 px-4">
                                    <span class="submitting"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<link href="~/Content/style_inputs.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Panel/docs/assets/plugins/popper/esm/popper.min.js"></script>
<script src="~/Content/main_input.js"></script>
<style>
    label .none {
        border-style: none;
        font-size: 14px;
        color: #b3b3b3;
        margin: 0 0 10px 0;
    }
</style>

