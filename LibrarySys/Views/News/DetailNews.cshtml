@model LibrarySys.Models.Entity.News
@{
    ViewBag.Title = "DetailNews";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<body>
    <div class="content">
        <div class="container">
            <div class="row align-items-stretch no-gutters input-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3 style="text-align:center; font-style:italic; color:grey">Актуализирай Новина</h3>

                        @using (Html.BeginForm("UpdateNews", "News", FormMethod.Post))
                        {

                            <form class="mb-5" method="post" id="inputForm" name="inputForm">

                                <div class="row">
                                    <label for="" class="col-form-label"> ИД: @Html.TextBoxFor(p => p.ID_news, new { @class = "none" })</label>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 form-group mb-3">
                                        <label for="" class="col-form-label">  Тема: *</label>
                                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Въведи тема" })

                                    </div>


                                </div>


                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label"> Активирай:  *</label>
                                        @Html.DropDownListFor(p => p.Screen, (List<SelectListItem>)ViewBag.scr, new { @class = "form-control", @placeholder = "Избери" })
                                        @Html.ValidationMessageFor(p => p.Screen, "", new { @style = "color:red" })
                                    </div>

                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Дата:*    @Html.TextBoxFor(p => p.Date, "{0:dd.MM.yyyy}", new { @class = "none" })</label>


                                    </div>
                                </div>


                                <div class="row">


                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">  Служител: *</label>
                                        <label>Служител</label>
                                        @Html.DropDownListFor(x => x.Employee.ID_employee, (List<SelectListItem>)ViewBag.e, new { @class = "form-control", @placeholder = "Избери служител" })
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group mb-3">
                                        <label for="" class="col-form-label"> Съдържание: *</label>
                                        @Html.TextAreaFor(x => x.Article, new { @name = "message", @id = "message", @cols = "30", @rows = "4", @class = "form-control", @placeholder = "Въведи....." })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="submit" value="Актуализирай" class="btn btn-primary rounded-0 py-2 px-4">
                                    </div>
                                </div>
                            </form>


                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>


<style>
    label .none {
        border-style: none;
        font-size: 14px;
        color: #b3b3b3;
        margin: 0 0 10px 0;
    }
</style>
<link href="~/Content/style_inputs.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Panel/docs/assets/plugins/popper/esm/popper.min.js"></script>
<script src="~/Content/main_input.js"></script>


