@using LibrarySys.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Reader>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<body>

    <section class="main-content">
        <div class="container">
            <h1 style="text-align:center; font-style:italic"> Читатели: </h1>

            @using (Html.BeginForm("Index", "Reader", FormMethod.Get))
            {
                <div style="margin-bottom:15px; margin-top:15px">
                    <ion-icon name="search-outline">   </ion-icon> &nbsp @Html.TextBox("s")
                    <input type="submit" value="Търсене" class="btn btn-primary btn-sm" />
                </div>
            }   <a href="~/Reader/Passive" class="btn btn-primary btn-sm" style="float:right;"> Не активни читатели </a>
            <table class="table">
                <thead>
                    <tr>
                        <th> ID </th>
                        <th> Име </th>
                        <th> Фамилия </th>
                        <th> Имейл </th>
                        <th> Телефонен номер </th>
                        <th> Училище </th>
                        <th> Архив </th>
                        <th> Действия </th>

                    </tr>
                </thead>
                @foreach (var r in Model)
                {
                    <tbody>
                        <tr>
                            <td> @r.ID_reader </td>
                            <td> @r.FirstName </td>
                            <td> @r.LastName</td>
                            <td> @r.Email</td>
                            <td> @r.PhoneNumber</td>
                            <td> @r.School</td>

                            <td>
                                <a href="~/Reader/Archive/@r.ID_reader" class="btn btn-primary btn-sm"> Книги </a>
                            </td>

                            <td>
                                <div class="dropdown open">
                                    <a href="#!" class="px-2" id="triggerId3" data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        <i class="fa fa-ellipsis-v"></i>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="triggerId3">

                                        <a class="dropdown-item" href="~/Reader/UpdateReaderPage/@r.ID_reader"><i class="fa fa-pencil mr-1"></i> Актуализиране</a>

                                        <a class="dropdown-item text-danger" href="~/Reader/DeleteReader/@r.ID_reader" onclick="return confirm('Потвърждавате ли че искате да деактивирате читателя')"><i class="fa fa-recycle mr-1"></i> Деактивирай </a>


                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </section>


    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

    <a href="~/Reader/AddReader" class="btn btn-primary btn-sm"> Добави </a> 
</body>
</html>


<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/Content/table style.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

