@model LibrarySys.Models.Entity.Reader
@{
    ViewBag.Title = "UpdateReaderPage";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<body>

    <div class="content">

        <div class="container">
            <div class="row align-items-stretch no-gutters input-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3 style="text-align:center; font-style:italic; color:grey">Актуализиране на читател</h3>
                        @using (Html.BeginForm("UpdateReader", "Reader", FormMethod.Post))
                        {

                            <form class="mb-5" method="post" id="inputForm" name="inputForm">

                                <div class="row">
                                    <label for="" class="col-form-label"> ИД: @Html.TextBoxFor(r => r.ID_reader, new { @class = "none" })</label>
                                </div>


                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Име: *</label>
                                        @Html.TextBoxFor(r => r.FirstName, new { @class = "form-control", @placeholder = "Въведи името на читателя" })
                                        @Html.ValidationMessageFor(r => r.FirstName, "", new { @style = "color:red" })
                                    </div>
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Фамилия:  *</label>
                                        @Html.TextBoxFor(r => r.LastName, new { @class = "form-control", @placeholder = "Въведи фамилията на читателя" })
                                        @Html.ValidationMessageFor(r => r.LastName, "", new { @style = "color:red" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Имейл: *</label>

                                        @Html.TextBoxFor(r => r.Email, new { @class = "form-control", @placeholder = "Въведи имейл" })
                                        @Html.ValidationMessageFor(r => r.Email, "", new { @style = "color:red" })

                                    </div>
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Парола: *</label>
                                        @Html.TextBoxFor(r => r.Password, new { @type = "password", @id = "pass", @class = "form-control", @placeholder = "Въведи парола" }) <input type="checkbox" onclick="showhide()" class="col-form-label" /> Покажи/Скрий парола
                                        @Html.ValidationMessageFor(r => r.Password, "", new { @style = "color:red" })


                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label">Телефонен номер: *</label>

                                        @Html.TextBoxFor(r => r.PhoneNumber, new { @class = "form-control", @placeholder = "Въведи телефонен номер" })
                                        @Html.ValidationMessageFor(r => r.PhoneNumber, "", new { @style = "color:red" })
                                    </div>

                                    <div class="col-md-6 form-group mb-3">
                                        <label for="" class="col-form-label"> Активирай/Деактивирай:  *</label>
                                        @Html.DropDownListFor(r => r.Activate, (List<SelectListItem>)ViewBag.act, new { @class = "form-control", @placeholder = "Избери" })
                                        @Html.ValidationMessageFor(r => r.Activate, "", new { @style = "color:red" })
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group mb-3">
                                        <label for="" class="col-form-label">Учебно заведение: *</label>
                                        @Html.TextBoxFor(r => r.School, new { @class = "form-control", @placeholder = "Въведи учебно заведение" })
                                        @Html.ValidationMessageFor(r => r.School, "", new { @style = "color:red" })
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="submit" value="Актуализирай" class="btn btn-primary rounded-0 py-2 px-4">
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>


<style>
    label .none {
        border-style: none;
        font-size: 14px;
        color: #b3b3b3;
        margin: 0 0 10px 0;
    }
</style>
<link href="~/Content/style_inputs.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Content/Panel/docs/assets/plugins/popper/esm/popper.min.js"></script>
<script src="~/Content/main_input.js"></script>


<script>
    function showhide() {
        var x = document.getElementById("pass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>