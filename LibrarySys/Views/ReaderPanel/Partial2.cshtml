
@model LibrarySys.Models.Entity.Reader
@using (Html.BeginForm("Index2", "ReaderPanel", FormMethod.Post))
{
    <form class="form-horizontal">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Име:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.FirstName, "", new { @style = "color:red" })

            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Фамилия:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.LastName, "", new { @style = "color:red" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Парола:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @id = "pass" })  <input type="checkbox" onclick="showhide()" /> Покажи/Скрий парола
                @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Снимка:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @style = "color:red" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Училище: </label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.School, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.School, "", new { @style = "color:red" })
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Актуализиране </button>
            </div>
        </div>
    </form>
}


<script>
        function showhide() {
            var x = document.getElementById("pass");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
</script>